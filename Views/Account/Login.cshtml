@model ForkyMVC.Models.Account.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid d-flex justify-content-center align-items-center" style="height: 80vh;">
    <div class="account-container text-center">
        <h2 class="mb-4">@ViewData["Title"]</h2>

        @if (!string.IsNullOrEmpty(TempData["Message"] as string))
        {
            <div class="alert alert-success">
                @TempData["Message"]
            </div>
        }

        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow login-card">
                    <div class="card-body">
                        <form asp-action="Login" method="post">
                            <div class="form-group mb-2">
                                <label asp-for="UserName" class="form-label"></label>
                                <input asp-for="UserName" class="form-control" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-2">
                                <label asp-for="Password" class="form-label"></label>
                                <input asp-for="Password" type="password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-secondary user-btn user-btn-secondary">Login</button>
                        </form>
                    </div>
                </div>
                <div class="mt-3">
                    <a asp-action="Register">Don't have an account? Register here</a>
                </div>
            </div>
        </div>
    </div>
</div>


