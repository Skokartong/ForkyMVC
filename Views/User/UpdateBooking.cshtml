@model ForkyMVC.Models.Booking.UpdateBookingViewModel

@{
    ViewBag.Title = "Update Booking";
}

<div class="container mt-5">
    <h1>Update Booking</h1>
    <form asp-action="UpdateBooking" method="post">
        <input type="hidden" asp-for="FK_RestaurantId" />

        <div class="form-group">
            <label asp-for="NumberOfGuests" class="control-label"></label>
            <input asp-for="NumberOfGuests" class="form-control" type="number" min="1" required />
            <span asp-validation-for="NumberOfGuests" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BookingStart" class="control-label"></label>
            <input asp-for="BookingStart" class="form-control" type="datetime-local" required />
            <span asp-validation-for="BookingStart" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BookingEnd" class="control-label"></label>
            <input asp-for="BookingEnd" class="form-control" type="datetime-local" required />
            <span asp-validation-for="BookingEnd" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Message" class="control-label"></label>
            <textarea asp-for="Message" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Update Booking</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
