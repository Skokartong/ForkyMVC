@model List<ForkyMVC.Models.Restaurant.View.MenuViewModel>

<div class="user-container mt-5">
    <h2>Menu</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success user-alert">@TempData["SuccessMessage"]</div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger user-alert">@TempData["ErrorMessage"]</div>
    }

    <table class="table table-striped user-table">
        <thead>
            <tr>
                <th>Dish</th>
                <th>Drink</th>
                <th>Ingredients</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var menu in Model)
            {
                <tr>
                    <td>@menu.NameOfDish</td>
                    <td>@menu.Drink</td>
                    <td>@menu.Ingredients</td>
                    <td>@menu.Price.ToString() $</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<button class="btn btn-secondary user-btn user-btn-secondary" onclick="window.history.back();">Go back</button>

