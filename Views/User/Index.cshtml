@{
    ViewBag.Title = "User Dashboard";
}

<div class="container mt-5">
    <h1 class="text-center">User Dashboard</h1>
    <div class="row mt-4">
        <div class="col-md-4 mb-4">
            <div class="card text-white bg-primary mb-3">
                <div class="card-header">Account Management</div>
                <div class="card-body">
                    <h5 class="card-title">Manage your account settings</h5>
                    <a asp-action="MyAccount" asp-controller="Account" class="btn btn-light mb-2">My Account</a>
                    <a asp-action="UpdateAccount" class="btn btn-light">Update Account</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card text-white bg-success mb-3">
                <div class="card-header">Restaurant Viewing</div>
                <div class="card-body">
                    <h5 class="card-title">Browse available restaurants</h5>
                    <a asp-action="ViewRestaurants" class="btn btn-light">View Restaurants</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card text-white bg-danger mb-3">
                <div class="card-header">Booking Management</div>
                <div class="card-body">
                    <h5 class="card-title">Manage your bookings</h5>
                    <a asp-action="ViewBookings" class="btn btn-light mb-2">View Bookings</a>
                </div>
            </div>
        </div>
    </div>
</div>

