@model List<ForkyMVC.Models.Restaurant.RestaurantViewModel>

<div class="container mt-5">
    <h2>Restaurants</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Location</th>
                <th>Additional details</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var restaurant in Model)
            {
                <tr>
                    <td>@restaurant.RestaurantName</td>
                    <td>@restaurant.TypeOfRestaurant</td>
                    <td>@restaurant.Location</td>
                    <td>@restaurant.AdditionalInformation</td>
                    <td>
                        <a class="btn btn-primary" asp-action="ViewMenu" asp-route-restaurantId="@restaurant.Id">
                            View Menu
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

