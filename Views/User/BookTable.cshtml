@model ForkyMVC.Models.Booking.AddBookingViewModel

@{
    ViewBag.Title = "Book a Table";
}

<div class="container mt-5">
    <h1 class="mb-4 text-center">Book a Table</h1>
    <form asp-action="BookTable" method="post" class="bg-light p-4 rounded shadow">
        <input type="hidden" asp-for="FK_RestaurantId" />
        <input type="hidden" asp-for="FK_AccountId" />
        
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="NumberOfGuests" class="control-label"></label>
                    <input asp-for="NumberOfGuests" class="form-control" type="number" min="1" placeholder="Number of Guests" required />
                    <span asp-validation-for="NumberOfGuests" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="BookingStart" class="control-label"></label>
                    <input asp-for="BookingStart" class="form-control" type="datetime-local" required />
                    <span asp-validation-for="BookingStart" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="BookingEnd" class="control-label"></label>
                    <input asp-for="BookingEnd" class="form-control" type="datetime-local" required />
                    <span asp-validation-for="BookingEnd" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Message" class="control-label"></label>
                    <textarea asp-for="Message" class="form-control" rows="3" placeholder="Special requests or messages"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg">Book Table</button>
        </div>
    </form>
</div>
