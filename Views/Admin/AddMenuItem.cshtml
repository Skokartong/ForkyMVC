@model ForkyMVC.Models.Restaurant.Add.AddDishViewModel

<div class="container mt-5 admin-card">
    <h1 class="text-center">Add New Dish</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
    }
    <form asp-action="AddMenuItem" method="post">
        <div class="form-group">
            <label for="NameOfDish">Dish Name</label>
            <input asp-for="NameOfDish" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Drink">Drink</label>
            <input asp-for="Drink" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Ingredients">Ingredients</label>
            <input asp-for="Ingredients" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Price">Price</label>
            <input asp-for="Price" type="number" class="form-control" />
        </div>
        <div class="form-group">
            <label for="IsAvailable">Available</label>
            <input asp-for="IsAvailable" type="checkbox" />
        </div>
        <div class="form-group">
            <label for="FK_RestaurantId">RestaurantId</label>
            <input asp-for="FK_RestaurantId" class="form-control" />
        </div>
        <button type="submit" class="btn btn-warning">Add Dish</button>
    </form>

    <button class="btn mint-green-btn mt-3" onclick="window.history.back();">Go back</button>
</div>


