@model ForkyMVC.Models.Restaurant.MenuViewModel

<h2>Edit Dish</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="UpdateMenuItem" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="FK_RestaurantId" />
    <div class="form-group">
        <label for="NameOfDish">Dish Name</label>
        <input asp-for="NameOfDish" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Drink">Drink</label>
        <input asp-for="Drink" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Ingredients">Ingredients</label>
        <input asp-for="Ingredients" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input asp-for="Price" type="number" class="form-control" />
    </div>
    <div class="form-group">
        <label for="IsAvailable">Available</label>
        <input asp-for="IsAvailable" type="checkbox" />
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<button class="btn btn-secondary" onclick="window.history.back();">Go back</button>

