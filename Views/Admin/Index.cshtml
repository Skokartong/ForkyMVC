@{
    ViewBag.Title = "Admin Dashboard";
}

<div class="container mt-5">
    <h1>Admin Dashboard</h1>
    <div class="row">
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3">
                <div class="card-header">Manage Restaurants</div>
                <div class="card-body">
                    <h5 class="card-title">View and manage restaurants</h5>
                    <a href="@Url.Action("ViewRestaurants", "Admin")" class="btn btn-light">View Restaurants</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success mb-3">
                <div class="card-header">Manage Accounts</div>
                <div class="card-body">
                    <h5 class="card-title">View and manage customer accounts</h5>
                    <a href="@Url.Action("ViewAccounts", "Admin")" class="btn btn-light">View Accounts</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-danger mb-3">
                <div class="card-header">Manage Bookings</div>
                <div class="card-body">
                    <h5 class="card-title">View and manage bookings</h5>
                    <a href="@Url.Action("ViewBookings", "Admin")" class="btn btn-light">View Bookings</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-info mb-3">
                <div class="card-header">Manage Menus</div>
                <div class="card-body">
                    <h5 class="card-title">View and manage menus</h5>
                    <a href="@Url.Action("ViewMenus", "Admin")" class="btn btn-light">View Menus</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-warning mb-3">
                <div class="card-header">Manage Tables</div>
                <div class="card-body">
                    <h5 class="card-title">View and manage tables</h5>
                    <a href="@Url.Action("ViewTables", "Admin")" class="btn btn-light">View Tables</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3">
                <div class="card-header">Manage Tables</div>
                <div class="card-body">
                    <h5 class="card-title">Manage your account</h5>
                    <a href="@Url.Action("MyAccount", "Account")" class="btn btn-light">View Account</a>
                </div>
            </div>
        </div>
    </div>
</div>
