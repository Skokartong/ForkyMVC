@{
    ViewBag.Title = "Admin Dashboard";
}

<div class="container mt-5 text-center">
    <h1>Admin Dashboard</h1>
    <div class="row justify-content-center">
        <div class="col-md-4 mb-3">
            <div class="card admin-card bg-mint-1">
                <div class="card-header">Manage Restaurants</div>
                <div class="card-body">
                    <h5 class="card-title">View and manage restaurants</h5>
                    <a href="@Url.Action("ViewRestaurants", "Admin")" class="btn mint-green-btn mt-3">View Restaurants</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card admin-card bg-mint-2">
                <div class="card-header">Manage Accounts</div>
                <div class="card-body">
                    <h5 class="card-title">View and manage customer accounts</h5>
                    <a href="@Url.Action("ViewAccounts", "Admin")" class="btn mint-green-btn mt-3">View Accounts</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card admin-card bg-mint-3">
                <div class="card-header">Manage Bookings</div>
                <div class="card-body">
                    <h5 class="card-title">View and manage bookings</h5>
                    <a href="@Url.Action("ViewBookings", "Admin")" class="btn mint-green-btn mt-3">View Bookings</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card admin-card bg-mint-4">
                <div class="card-header">Manage Menus</div>
                <div class="card-body">
                    <h5 class="card-title">View and manage menus</h5>
                    <a href="@Url.Action("ViewMenus", "Admin")" class="btn mint-green-btn mt-3">View Menus</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card admin-card bg-mint-5">
                <div class="card-header">Manage Tables</div>
                <div class="card-body">
                    <h5 class="card-title">View and manage tables</h5>
                    <a href="@Url.Action("ViewTables", "Admin")" class="btn mint-green-btn mt-3">View Tables</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card admin-card bg-mint-6">
                <div class="card-header">Manage Your Account</div>
                <div class="card-body">
                    <h5 class="card-title">Manage your account</h5>
                    <a href="@Url.Action("MyAccount", "Account")" class="btn mint-green-btn mt-3">View Account</a>
                </div>
            </div>
        </div>
    </div>
</div>

