@model ForkyMVC.Models.Restaurant.RestaurantViewModel

@{
    ViewBag.Title = "Update Restaurant";
}

<div class="container mt-5">
    <h1>Update Restaurant</h1>
    <form asp-action="UpdateRestaurant" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="RestaurantName"></label>
            <input asp-for="RestaurantName" class="form-control" />
            <span asp-validation-for="RestaurantName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TypeOfRestaurant"></label>
            <input asp-for="TypeOfRestaurant" class="form-control" />
            <span asp-validation-for="TypeOfRestaurant" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Location"></label>
            <input asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AdditionalInformation"></label>
            <textarea asp-for="AdditionalInformation" class="form-control"></textarea>
            <span asp-validation-for="AdditionalInformation" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Update Restaurant</button>
    </form>
</div>

<button class="btn btn-secondary" onclick="window.history.back();">Go back</button>

