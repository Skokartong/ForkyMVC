@model List<ForkyMVC.Models.Restaurant.View.MenuViewModel>

@{
    ViewBag.Title = "View Menus";
}

<div class="admin-container mt-5 d-flex justify-content-center text-center">
    <div class="admin-table-wrapper">
        <h1 class="text-center mb-4">Menus</h1>
        <a href="@Url.Action("AddmenuItem", "Admin")" class="btn mint-green-btn mt-1 mb-3">Add New Dish</a>
        <div class="admin-table-responsive">
            <table class="table table-bordered admin-table">
                <thead class="admin-table-header">
                    <tr>
                        <th>ID</th>
                        <th>Dish Name</th>
                        <th>Drink</th>
                        <th>Available</th>
                        <th>Price</th>
                        <th>Restaurant Id</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var menu in Model)
                    {
                        <tr>
                            <td>@menu.Id</td>
                            <td>@menu.NameOfDish</td>
                            <td>@menu.Drink</td>
                            <td>@menu.IsAvailable</td>
                            <td>@menu.Price.ToString() $</td>
                            <td>@menu.FK_RestaurantId</td>
                            <td>
                                <a href="@Url.Action("UpdateMenuItem", "Admin", new { menuId = menu.Id, restaurantId = menu.FK_RestaurantId })" class="btn btn-warning">Edit</a>
                                <form asp-action="DeleteDish" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this dish?');">
                                    <input type="hidden" name="menuId" value="@menu.Id" />
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
