@model ForkyMVC.Models.Restaurant.Add.AddRestaurantViewModel

<div class="container mt-5 admin-card">
    <h1 class="text-center">Add New Restaurant</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
    }

    <form asp-action="AddRestaurant" method="post">

        <div class="form-group">
            <label for="RestaurantName">Name</label>
            <input asp-for="RestaurantName" class="form-control" />
        </div>
        <div class="form-group">
            <label for="TypeOfRestaurant">Type Of Restaurant</label>
            <input asp-for="TypeOfRestaurant" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Location">Location</label>
            <input asp-for="Location" class="form-control" />
        </div>
        <div class="form-group">
            <label for="AdditionalInformation">Additional Information</label>
            <input asp-for="AdditionalInformation" class="form-control" />
        </div>
        
        <button type="submit" class="btn btn-warning">Add Restaurant</button>
    </form>
    
    <button class="btn mint-green-btn mt-3" onclick="window.history.back();">Go back</button>
</div>



