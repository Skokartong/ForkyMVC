@model List<ForkyMVC.Models.Restaurant.TableViewModel>

@{
    ViewBag.Title = "Tables for Restaurant";
    var restaurantId = ViewBag.RestaurantId;
}

<div class="container mt-5">
    <h1>Tables for Restaurant @restaurantId</h1>
    <a href="@Url.Action("AddTable", "Admin", new { restaurantId })" class="btn btn-primary">Add New Table</a>
    <table class="table mt-3">
        <thead>
            <tr>
                <th>Table Number</th>
                <th>Seats</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var table in Model)
            {
                <tr>
                    <td>@table.TableNumber</td>
                    <td>@table.AmountOfSeats</td>
                    <td>
                        <a href="@Url.Action("UpdateTable", "Admin", new { tableId = table.Id })" class="btn btn-warning">Edit</a>
                        <form asp-action="DeleteTable" method="post" class="d-inline">
                            <input type="hidden" name="tableId" value="@table.Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
