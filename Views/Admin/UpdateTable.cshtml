@model ForkyMVC.Models.Restaurant.TableViewModel

@{
    ViewBag.Title = "Update Table";
}

<div class="container mt-5">
    <h1>Update Table</h1>
    <form asp-action="UpdateTable" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="FK_RestaurantId" /> 
        <div class="form-group">
            <label asp-for="TableNumber"></label>
            <input asp-for="TableNumber" class="form-control" />
            <span asp-validation-for="TableNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AmountOfSeats"></label>
            <input asp-for="AmountOfSeats" class="form-control" />
            <span asp-validation-for="AmountOfSeats" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Update Table</button>
    </form>
</div>
