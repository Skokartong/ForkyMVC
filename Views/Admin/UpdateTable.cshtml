@model ForkyMVC.Models.Restaurant.Update.UpdateTableViewModel

@{
    ViewBag.Title = "Update Table";
}

<div class="container mt-5 admin-card">
    <h1 class="text-center">Update Table</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
    }

    <form asp-action="UpdateTable" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="FK_RestaurantId" />
        <div class="form-group">
            <label asp-for="TableNumber"></label>
            <input asp-for="TableNumber" class="form-control" />
            <span asp-validation-for="TableNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AmountOfSeats"></label>
            <input asp-for="AmountOfSeats" class="form-control" />
            <span asp-validation-for="AmountOfSeats" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-warning">Update Table</button>
    </form>

    <button class="btn mint-green-btn mt-3" onclick="window.history.back();">Go back</button>
</div>
