@model List<ForkyMVC.Models.Account.AccountViewModel>

@{
    ViewBag.Title = "View Accounts";
}

<div class="container mt-5">
    <h1>Accounts</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Address</th>
            </tr>
        </thead>
        @foreach (var account in Model)
        {
            <tr>
                <td>@account.Id</td>
                <td>@account.FirstName</td>
                <td>@account.LastName</td>
                <td>@account.Email</td>
                <td>@account.Phone</td>
                <td>@account.Address</td>
            </tr>
        }
    </table>
</div>
