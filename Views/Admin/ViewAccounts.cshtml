@model List<ForkyMVC.Models.Account.AccountViewModel>

@{
    ViewBag.Title = "View Accounts";
}

<div class="container mt-5">
    <h1>Accounts</h1>
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var account in Model)
            {
                <tr>
                    <td>@account.FirstName</td>
                    <td>@account.LastName</td>
                    <td>@account.Email</td>
                    <td>@account.Phone</td>
                    <td>@account.Address</td>
                    <td>
                        <a href="@Url.Action("ViewAccount", "Admin", new { accountId = account.Id})" class="btn btn-info">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
